<?xml version="1.0" encoding="utf-8"?>
<com.zhangwx.z_utils.Z_Widget.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recycle_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/password_bao1" />

        <TextView
            android:id="@+id/recycle_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textColor="@android:color/white" />
    </LinearLayout>

</com.zhangwx.z_utils.Z_Widget.RippleView>